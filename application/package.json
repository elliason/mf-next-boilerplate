{
  "name": "mf-next-boilerplate",
  "version": "0.0.1",
  "description": "boilerplate for next js based projects",
  "author": "Media Factory CZ <info@mediafactorygroup.cz>",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,cjs,mjs,css,scss,less,json,yml,yaml.md,mdx}\"",
    "eslint:fix": "eslint . --quiet --fix",
    "eslint:lint": "eslint .",
    "stylelint:fix": "stylelint \"**/*.{css,scss,sass}\" --fix --quiet",
    "stylelint:lint": "stylelint \"**/*.{css,scss,sass}\"",
    "lint": "yarn eslint:lint && yarn stylelint:lint",
    "lint:fix": "yarn eslint:fix && yarn stylelint:fix",
    "rm-node-modules": "find . -name \"node_modules\" -type d -exec rm -rf '{}' +",
    "e2e": "yarn workspace e2e run cypress:open"
  },
  "devDependencies": {
    "@media-factory-cz/eslint-config": "^1.0.3",
    "@media-factory-cz/eslint-config-react": "^1.0.4",
    "@media-factory-cz/prettier-config": "^1.0.3",
    "@media-factory-cz/stylelint-config": "^1.0.6",
    "@media-factory-cz/typescript-config": "^1.0.4",
    "@total-typescript/ts-reset": "^0.3.7",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.10.2",
    "prettier": "^2.8.4",
    "sass": "^1.58.3",
    "stylelint": "^15.2.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "typescript": "^4.9.5"
  }
}
