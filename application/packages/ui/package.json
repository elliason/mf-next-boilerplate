{
  "name": "@mf-project/ui",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,cjs,mjs,css,scss,less,json,yml,yaml.md,mdx}\"",
    "lint": "pnpm run lint:styles:fix && pnpm run lint:scripts:fix && pnpm run lint:ts",
    "lint:styles": "stylelint \"**/*.{css,scss,sass,less}\"",
    "lint:styles:fix": "stylelint \"**/*.{css,scss,sass,less}\" --fix",
    "lint:scripts": "eslint --ext .ts,.tsx,.js,.jsx,.mjs,.cjs .",
    "lint:scripts:fix": "eslint --ext .ts,.tsx,.js,.jsx,.mjs,.cjs --fix .",
    "lint:ts": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:watch\"",
    "dev:server": "vite --host",
    "dev:watch": "vite build --watch --emptyOutDir false",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "comments": {
    "dev:server": "Runs vite dev server with index.html as entrypoint",
    "dev:watch": "Runs vite build in watch mode"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.17",
    "clsx": "^1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use-keypress": "^1.3.1"
  },
  "devDependencies": {
    "@mf-project/eslint-config": "workspace:^",
    "@mf-project/prettier-config": "workspace:^",
    "@mf-project/stylelint-config": "workspace:^",
    "@mf-project/tailwind-config": "workspace:^",
    "@mf-project/typescript-config": "workspace:^",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/node": "^18.16.5",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@vitejs/plugin-react-swc": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "eslint": "^8.40.0",
    "jest-dom": "link:@types/@testing-library/jest-dom",
    "jsdom": "^22.0.0",
    "postcss": "^8.4.23",
    "prettier": "2.8.8",
    "sass": "^1.62.1",
    "stylelint": "^15.6.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.30.1"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  }
}
